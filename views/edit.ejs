<%- include('./partials/header') %>

    <h1 class="ongoing ">Edit events</h1>
    <br>
    <section class="events fix3">
        <% allevents.forEach((event)=> { %>
            <div class="box ">
            <form action="/editevent/<%=event._id%>?_method=PUT" method="POST">
                <h1 class="event fix4">
                    <span class="label">Event Name: </span> <input type="text" class="name_box" name="name" value="<%=event.name%>">
                </h1>
                <p class="event fix4">
                    <span class="label">Starting Time: </span> <input type="text" class="name_box" name="startAt" value="<%=event.startAt%>"><br>
                    <span class="label">Ending Time: </span> <input type="text" class="name_box" name="endAt" value="<%=event.endAt%>">
                </p>
                <p class="event fix4">
                    <textarea name="detail" cols="30" class="create-input"id="fix5" required rows="10"><%=event.detail%></textarea>
                </p>
                <p class="event fix4">
                    <span class="label">Location: </span><input type="text" class="name_box" name="location" value="<%=event.location%>">
                </p>
                <p class="participants">
                    Participants : <%= event.members.length %>
                </p>
                <br>
                <div class="submit_button_div">
                    <button type="submit" class="submit">Update</button>
                </div>
            </form>
            </div>
            <% }) %>
    </section>
    <footer>

    </footer>
</body>

</html>